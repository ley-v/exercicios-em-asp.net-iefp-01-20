<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--Deve-se alterar o RouteConfig na pasta App_start para iniciar o programa no index desejado-->
                @Html.ActionLink("Equipas", "Index", "Equipas1", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Membros", "Index", "Membroes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <!--Serve para adicionar um item ao menu (a barra preta no topo), o 'title' é a caixa de dicas -->
