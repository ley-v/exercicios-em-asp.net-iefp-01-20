                    <li>@Html.ActionLink(" [C] ", "Index", "C", new { area = "" }, new { @class = "navbar-brand", @style = "color:salmon;", @title = "Drops para tabelas" })</li>
                    <li>@Html.ActionLink(" [D] ", "Index", "D", new { area = "" }, new { @class = "navbar-brand", @style = "color:purple;", @title = "Visualizar a PK a partir da seleção na drop" })</li>
                    <li>@Html.ActionLink(" [E] ", "Index", "E", new { area = "" }, new { @class = "navbar-brand", @style = "color:blue;", @title = "1: ModelView simples" })</li>
                    <li>@Html.ActionLink(" [F] ", "Index", "F", new { area = "" }, new { @class = "navbar-brand", @style = "color:olive;", @title = "2: ModelView com select" })</li>
                    <li>@Html.ActionLink(" [G] ", "Index", "G", new { area = "" }, new { @class = "navbar-brand", @title = "3: ModelView com cores" })</li>
                    <li>@Html.ActionLink(" [H] ", "Index", "H", new { area = "" }, new { @class = "navbar-brand", @title = "4: ModelView com 'estatísticas'" })</li>
                    <li>@Html.ActionLink(" [J] ", "Index", "J", new { area = "" }, new { @class = "navbar-brand", @title = "Drop para escolher membros por equipa" })</li>

                    <li>@Html.ActionLink(" [I] ", "Index", "I", new { area = "" }, new { @class = "navbar-brand", @title = "10 consultas com LINQ" })</li>
                    <li>@Html.ActionLink(" [L] ", "Index", "L", new { area = "" }, new { @class = "navbar-brand", @title = "Consultas com LINQ" })</li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">OUTROS<b class="caret"></b></a>

                        <ul class="dropdown-menu">
                            <li> @Html.ActionLink("S1-filtrar membros", "Index", "S1", new { area = "" }, new { @class = "" })</li>
                            <li> @Html.ActionLink("S2-ordena membros pelo nome, A->Z", "Index", "S2", new { area = "" }, new { @class = "" })</li>
                            <li> @Html.ActionLink("S3-ordena membros pelo nome ou pela equipa, A->Z", "Index", "S3", new { area = "" }, new { @class = "" })</li>
                            <li> @Html.ActionLink("S4-ordena pelo nome (ascendente e descendente)", "Index", "S4", new { area = "" }, new { @class = "" })</li>

                        </ul>
                    </li>

                    <li> @Html.ActionLink("[RR]", "Index", "RRa", new { area = "" }, new { @class = "navbar-brand", @title = "Reseta a base de dados e insere os registos padrões" })  </li>




                    @*[RR], Index e não RR, "RR"*@
                    @*<li>@Html.ActionLink(" [RR] ", "Index", "RR", new { area = "" }, new { @class = "navbar-brand", @title = "Recolonizar as 2 entidadescom os dados originais" })</li>*@

                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

