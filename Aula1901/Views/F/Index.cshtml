@model Aula1901.ViewModels.EquipaMembros

<h4>Permitir selecionar a equipa, listando os membros dessa equipa</h4>

<table>
    <tr>
        <th>
            <label>EQUIPas</label>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Equipas)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeEquipa)
            </td>
            <td>
                @Html.ActionLink("Select", "Index", new { id = item.Id })
            </td>
        </tr>
    }
</table>


@foreach (var item in Model.Membros)
{
    if (item.EquipaId == ViewBag.equipaClicada)
    {
        @item.Id @: -
        @item.NomeMembro @: -
        @item.EquipaId @: -
<br />
    }
}